@model List<FIRMA_MVC.Models.URUN>
@{
    ViewBag.Title = "Index";
}

<div id="arama">


</div>

<div id="liste">
    <table>
        <tr>
            <th>Sil</th>
            <th>Ürün Refno</th>
            <th>Ürün Adı</th>
            <th>Fiyatı</th>
            <th>Durumu</th>
            <th>Kategori</th>
            <th>Marka</th>
            <th>resim</th>
        </tr>
        @foreach (var urun in Model)
        {
            <tr>
                <th><a href="/Admin/Urunler/Delete/@urun.URUN_REFNO">Sil</a></th>
                <th>@urun.URUN_REFNO</th>
                <th>
                    <a href="/Admin/Urunler/Create/@urun.URUN_REFNO">
                        @urun.URUN_ADI
                    </a>
                </th>
                <th>@urun.FIYATI</th>
                <th>@urun.DURUMU</th>
                <th>@urun.KATEGORI.KATEGORI_ADI</th>
                <th>@urun.MARKA.MARKA_ADI</th>
                <th><img src="~/images/@urun.RESIM1" /></th>
            </tr>
        }
    </table>
</div>

