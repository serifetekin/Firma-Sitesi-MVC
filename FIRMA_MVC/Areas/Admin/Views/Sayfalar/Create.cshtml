@model FIRMA_MVC.Models.SAYFA
@{
    ViewBag.Title = "Create";

    string hatalar = "";
    if (ViewData["hatalar"] != null)
    {
        hatalar = ViewData["hatalar"].ToString();
    }
}
@Scripts.Render("~/Scripts/jquery-3.3.1.min.js")
@Scripts.Render("~/ckeditor/ckeditor.js");
@Scripts.Render("~/ckeditor/ckfinder/ckfinder.js");
@Scripts.Render("~/Scripts/jquery.validate.js")

<div id="hatalar" style=" @( hatalar.Length > 0 ? "":"display:none") ">
    @hatalar
</div>

<form action="/Admin/Sayfalar/Create" method="post" enctype="multipart/form-data">
    <div class="form-horizontal">

        <div class="form-group">
            <label class="control-label col-md-6">KAYIT FORMU</label>
        </div>

        <div class="form-group">
            <label for="SAYFA_REFNO" class="control-label col-md-2">Sayfa Refno</label>
            <div class="col-md-10">
                <input type="text" readonly name="SAYFA_REFNO" id="SAYFA_REFNO" value="@Model.SAYFA_REFNO" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label for="BASLIK" class="control-label col-md-2">Başlık</label>
            <div class="col-md-10">
                <input type="text" name="BASLIK" id="BASLIK" value="@Model.SAYFA_REFNO" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            @Html.Label("İçerik:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.ICERIK, new { @id = "@proje.ICERIK" })
                @Html.ValidationMessageFor(model => model.ICERIK, "", new { @class = "text-danger" })
                <script>CKEDITOR.replace('ICERIK');</script>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-default" />
                <a href="/admin/sayfalar/index" class="btn btn-default">Vazgeç</a>
            </div>
        </div>
    </div>
</form>
